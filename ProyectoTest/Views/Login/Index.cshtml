@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - Tienda de Joyas</title>
    @Styles.Render("~/Content/css")
    <style>
        body {
            background-image: url('https://quianjoyas.es/wp-content/uploads/2023/11/imagen_portada_2-2048x975.jpg'); /* Puedes reemplazar la URL con la imagen que prefieras */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh; /* Altura del 100% de la pantalla */
            margin: 0;
            display: flex;
            justify-content: center; /* Centra horizontalmente */
            align-items: center; /* Centra verticalmente */
        }

        .container {
            max-width: 400px;
            background: rgba(255, 255, 255, 0.9); /* Fondo blanco translúcido */
            border-radius: 30px;
            padding: 30px;
            box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.2);
        }

        .heading {
            text-align: center;
            font-weight: bold;
            font-size: 32px;
            color: #e67e22; /* Naranja elegante */
        }

        .form {
            margin-top: 25px;
        }

            .form .input {
                width: 100%;
                background: #fff;
                border: 1px solid #ccc;
                padding: 12px 18px;
                border-radius: 20px;
                margin-top: 15px;
                font-size: 14px;
                color: #333;
            }

                .form .input:focus {
                    outline: none;
                    border-color: #e67e22; /* Borde naranja al hacer focus */
                }

            .form .login-button {
                display: block;
                width: 100%;
                background: #e67e22; /* Fondo naranja */
                color: white;
                padding: 12px;
                font-size: 16px;
                font-weight: bold;
                border-radius: 30px;
                border: none;
                margin-top: 25px;
                cursor: pointer;
                transition: background 0.3s ease;
            }

                .form .login-button:hover {
                    background: #d35400; /* Naranja más oscuro al pasar el ratón */
                }

        .forgot-password {
            text-align: right;
            margin-top: 10px;
        }

            .forgot-password a {
                font-size: 12px;
                color: #e67e22;
                text-decoration: none;
            }

        .agreement {
            text-align: center;
            margin-top: 20px;
        }

            .agreement a {
                font-size: 12px;
                color: #e67e22;
                text-decoration: none;
            }

        .social-accounts {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

            .social-accounts .social-button {
                background: white;
                border: 2px solid #e67e22;
                padding: 10px;
                border-radius: 50%;
                width: 40px;
                height: 40px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .social-accounts .social-button:hover {
                    background: #e67e22;
                    color: white;
                    transition: 0.3s ease;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="heading">Iniciar Sesión</div>
        <div class="form">
            <form action="@Url.Content("~/Login/Index")" method="post">
                @Html.AntiForgeryToken()
                <div>
                    <input class="form-control input" id="inputEmail" name="NCorreo" type="email" placeholder="Correo electrónico" />
                </div>
                <div>
                    <input class="form-control input" id="inputPassword" name="NContrasena" type="password" placeholder="Contraseña" autocomplete="off" />
                </div>
                <div class="forgot-password">
                    <a href="#">¿Olvidaste tu contraseña?</a>
                </div>
                <button class="login-button" type="submit">Ingresar</button>
            </form>
            <div class="agreement">
                <a href="@Url.Action("Registrarse", "Login")">¿No tienes cuenta? Regístrate</a>
            </div>
        </div>

        <div class="social-accounts">
            <div class="social-button">
                <!-- Agrega íconos sociales aquí -->
                <i class="fa fa-facebook"></i>
            </div>
            <div class="social-button">
                <i class="fa fa-google"></i>
            </div>
            <div class="social-button">
                <i class="fa fa-twitter"></i>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>